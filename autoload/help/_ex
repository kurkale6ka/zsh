   '(- :)-h' \
   '(- :)--help' \
   '-H[include hidden files]' \
   '-d+[change root directory]:directory:_path_files -/' \
   '-e[exact filename matches]' \
   '-g[list (grep) files with occurrences of topic]' \
   '-v[open with vim (actually $EDITOR, or use alt-v from within fzf)]' \
   '::topic:'
