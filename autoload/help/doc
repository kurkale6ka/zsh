# Search for help topics in my personal documentation
#
# Usage: doc [-d{help}] [-e] [-g] [-v] [topic]

# TODO:
# no global functions (hhelp, hopen, hgrep) in my shell. unfunction?

# Help
hhelp() {
local info
read -r -d $'\0' info << 'HELP'
doc [-d{help}] [-e] [-g] [-v] [topic]
          |      |    |    +- open with vim (or use alt-v from within fzf)
          |      |    +- list (grep) files with occurrences of topic
          |      +- exact matches
          +- help files parent folder
HELP
if [[ $1 == 0 ]]
then echo $info
else echo $info >&2
fi
}

# early exit
if [[ $1 == (-h|--help) ]]
then
   hhelp 0
   return
fi

# View a help file
hopen() {
   local hfile

   hfile=${1#$'\n'}
   hfile=${hfile#alt-v$'\n'}

   # TODO: send to running nvim?
   if [[ $1 == alt-v* || $actions == *vim* ]]
   then
      if [[ ${@[-1]} == --hls ]]
      then
         # before 'modelineexpr, zv was used
         v $hbase/$hfile -c"0/${@[-2]}" -c'noh|norm zz<cr>'
      else
         v $hbase/$hfile
      fi
      return
   fi

   # display path of file being viewed
   print -P "%F{cyan}$hbase/${hfile/$'\n'/^M}%f"

   case $hfile in
           *.md) open https://github.com/kurkale6ka/help/blob/master/$hfile ;;
      printf.sh) bash $hbase/$hfile ;;
         *.^txt)  bat $hbase/$hfile ;;
              *)  cat $hbase/$hfile ;;
   esac
}

# Grep for occurrences of topic
hgrep() {
   local -a hfiles

   hfiles=(${(0)"$(cd $hbase && rg -Ll -g'!LICENSE' -g'!README*' -0 -- $@)"})
   if [[ $hfiles ]]
   then
      if [[ $#hfiles > 1 ]]
      then
         hfiles=$(printf '%s\0' $hfiles | fzf --read0 -0 -1 --expect='alt-v' --preview "rg -Sn --color=always $@ -- $hbase/{}")
         [[ $hfiles ]] || return 1
      fi
      hopen $hfiles $@ --hls
   fi
}

# Options
OPTIND=1

local opt
local -a actions
local exact_matches
local hbase=${hbase:-$REPOS_BASE/help}

while getopts :d:egvh opt
do
   case $opt in
       d) hbase=${OPTARG/\~/$HOME} ;;
       e) exact_matches=1 ;;
       g) actions+=(grep) ;;
       v) actions+=(vim_open) ;;
       h) hhelp 0
          return ;;
      \?) echo "Invalid option: -$OPTARG" 1>&2
          return 1 ;;
   esac
done

shift $((OPTIND-1))

# arguments check
if (($# > 1))
then
   print -P '%F{red}Wrong number of arguments%f!' 1>&2
   hhelp 1
   return 1
fi

# Force searching for files with occurrences of topic
if [[ $actions == *grep* ]] && (($#))
then
   hgrep $@
   return
fi

local hfile
local -a hfiles

# Main
if (($#))
then
   # Search help files matching topic
   if ((exact_matches))
   then
      hfiles=(${(0)"$(cd $hbase && fd --show-errors -tf -tl -E'LICENSE' -E'README*' -E'*~' -p -0 -- $@)"})
      if [[ $hfiles ]]
      then
         if [[ $#hfiles > 1 ]]
         then
            hfiles=$(printf '%s\0' $hfiles | fzf --read0 -0 -1 --expect='alt-v' --preview "cat $hbase/{}")
            # exit if ctrl+c was pressed
            [[ $hfiles ]] || return 1
         fi
         hopen $hfiles
      else
         # if no matching filenames were found, list files with occurrences of topic
         hgrep $@
      fi
   else
      # fuzzy
      hfile=$(cd $hbase && fd --show-errors -tf -tl -E'LICENSE' -E'README*' -E'*~' -0 | fzf -q$@ --read0 -0 -1 --expect='alt-v' --preview 'cat {}' || echo $pipestatus[2])

      if [[ $hfile == $'\n'1 ]] # no results
      then
         hgrep $@
      elif [[ $hfile != 130 ]] # canceled with ctrl+c
      then
         hopen $hfile
      fi
   fi
else
   # Search trough all help files
   if ((exact_matches))
   then
      hfile=$(cd $hbase && fd --show-errors -tf -tl -E'LICENSE' -E'README*' -E'*~' -0 | fzf -e --read0 -0 -1 --expect='alt-v' --preview 'cat {}')
   else
      # fuzzy
      hfile=$(cd $hbase && fd --show-errors -tf -tl -E'LICENSE' -E'README*' -E'*~' -0 | fzf --read0 -0 -1 --expect='alt-v' --preview 'cat {}')
   fi

   if [[ $hfile ]]
   then
      hopen $hfile
   fi
fi
