# Syncing of my repos folder:
#
# Usage:
#   rsall [-b<base>] [-d] [-n] destination

local base=github
local del=--delete
local dry
local opt

OPTIND=1

while getopts ':hb:dn' opt
do
   case $opt in
      ( h) echo 'Usage: rsall [-b<base>] [-d] [-n] destination'
           return 0
           ;;
      ( b) base=$OPTARG
           ;;
      ( d) del=--delete-excluded
           ;;
      ( n) dry=n
           ;;
      (\?) echo "Invalid option: -$OPTARG" 1>&2
           return 1
           ;;
   esac
done

shift $((OPTIND-1))

rsync -ai$dry --no-o --no-g $del -e'ssh -q'         \
      -f".- $REPOS_BASE/config/dotfiles/.gitignore" \
      -f'- config/dotfiles/.inputrc.mini'           \
      -f'+ config/dotfiles/'                        \
      -f'+ config/dotfiles/**'                      \
      -f'+ config/git.bash'                         \
      -f'- config/**'                               \
      -f'- .gitignore'                              \
      -f'- .git'                                    \
      -f'- bash/.bash_history'                      \
      -f'P bash/.bash_history'                      \
      -f'- bash/.bashrc.mini'                       \
      -f'+ scripts/mkconfig.sh'                     \
      -f'+ scripts/db-create'                       \
      -f'- scripts/**'                              \
      -f'- LICENSE*'                                \
      -f'- README*'                                 \
      $REPOS_BASE/bash                              \
      $REPOS_BASE/config                            \
      $REPOS_BASE/zsh                               \
      $REPOS_BASE/fzf                               \
      $REPOS_BASE/scripts          $1:~/$base

rsvim -ai$dry $del $REPOS_BASE/vim $1:~/$base
